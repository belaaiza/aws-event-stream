{
  "name": "event.store",
  "version": "1.0.0",
  "description": "",
  "author": "Thiago da Rosa de Bustamante <trbustamante@gmail.com>",
  "license": "MIT",
  "main": "./dist/event-store.js",
  "typings": "./dist/event-store.d.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "lint": "tslint ./src/**/*.ts ./test/**/*.ts",
    "lint:fix": "tslint --fix ./src/**/*.ts ./test/**/*.ts -t verbose",
    "postversion": "git push origin master",
    "pretest": "cross-env NODE_ENV=test npm run build && npm run lint",
    "test": "cross-env NODE_ENV=test mocha --exit",
    "test:coverage": "nyc npm test",
    "tsc": "tsc"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thiagobustamante/eventstore"
  },
  "bugs": {
    "url": "https://github.com/thiagobustamante/eventstore/issues"
  },
  "directories": {
    "lib": "dist"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "engineStrict": true,
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "chai": "^4.1.2",
    "cross-env": "^5.2.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.9",
    "test-wait": "^1.1.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.1"
  }
}
